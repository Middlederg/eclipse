<details data-popover="@Position.ToString().ToLowerInvariant()">
    <summary>
        @Summary
    </summary>
    <div>
        @Content
    </div>
</details>

@code {

    [Parameter]
    public RenderFragment Summary { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public PopoverPosition Position { get; set; } = PopoverPosition.Down;

}
